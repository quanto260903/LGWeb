@{
    ViewData["Title"] = "Configurations / Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Domain.Entities.WebConfiguration

<h1>Edit Configuration</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ConfigKey"></label>
        <input asp-for="ConfigKey" class="form-control" />
        <span asp-validation-for="ConfigKey" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfigValue"></label>
        <input asp-for="ConfigValue" class="form-control" />
        <span asp-validation-for="ConfigValue" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<a asp-action="Index">Back to List</a>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

