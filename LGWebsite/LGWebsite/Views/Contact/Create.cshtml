@model Domain.Entities.Contact

@{
    ViewData["Title"] = "Contact / Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Contact</h2>

<div class="card-body">
    <div class="example">
        <div class="tab-content rounded-bottom">
            <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1003">
                <form class="row g-3 needs-validation" action="/Contact/create" method="post" enctype="multipart/form-data">
                    <div class="col-md-4 position-relative">
                        <label class="form-label" for="nameInput">Name</label>
                        <textarea id="nameInput" class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Name" required asp-for="Name"></textarea>
                        @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
                        {
                            <div class="invalid-feedback">@ViewData.ModelState["Name"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                        }
                    </div>

                    <div class="col-md-4 position-relative">
                        <label class="form-label" for="emailInput">Email</label>
                        <textarea id="emailInput" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Email" required asp-for="Email"></textarea>
                        @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
                        {
                            <div class="invalid-feedback">@ViewData.ModelState["Email"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                        }
                    </div>
                    <div class="col-md-4 position-relative">
                        <label class="form-label" for="phoneInput">Số điện thoại</label>
                        <input type="tel" id="phoneInput" class="form-control  placeholder="Số điện thoại" required asp-for="Phone" />
                     
                    </div>
                    <div class="col-md-4 position-relative">
                        <label class="form-label" for="messageInput">Message</label>
                        <textarea id="messageInput" class="form-control @(ViewData.ModelState["Message"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Message" required asp-for="Message"></textarea>
                        @if (ViewData.ModelState["Message"]?.Errors.Count > 0)
                        {
                            <div class="invalid-feedback">@ViewData.ModelState["Message"]?.Errors.FirstOrDefault()?.ErrorMessage</div>
                        }
                    </div>

                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
