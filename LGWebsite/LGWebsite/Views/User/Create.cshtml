@using Domain.Models
@model Domain.Entities.User


@{
    ViewData["Title"] = "User / Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}
<div class="card-body">
    <div class="example">
        <div class="tab-content rounded-bottom">
            <div class="tab-pane p-3 active preview" role="tabpanel" id="preview-1000">
                <form class="was-validated" action="/User/create" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label" for="validationTextarea">Name</label>
                        <textarea class="form-control is-invalid" id="validationTextarea" placeholder="Name" required="" asp-for="UserName"></textarea>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <label asp-for="ImageFile" class="input-group-text">Chọn ảnh</label>
                        <input asp-for="ImageFile" type="file" class="form-control" id="imageFileInput" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role"></label>
                        <select asp-for="Role" class="form-control">
                            <option value="">Chọn vai trò</option>
                            @foreach (var role in Enum.GetValues(typeof(UserRole)).Cast<UserRole>())
                            {
                                <option value="@((int)role)">@role</option>
                            }
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="validationTextarea">Thêm email</label>
                        <textarea class="form-control is-invalid" id="validationTextarea" placeholder="Email" required="" asp-for="Email"></textarea>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="validationTextarea">Thêm PassWord</label>
                        <input class="form-control is-invalid" type="password" class="form-control id="PassWord" placeholder="PassWord" required asp-for="PassWord" />
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>
                  @*   <div class="form-check form-switch">
                        <input type="hidden" name="Active" value="false" />
                        <label class="form-check-label" for="flexSwitchCheckDefault">Chọn IsEnabled</label>
                        <input class="form-check-input" type="checkbox" role="switch" id="flexCheckDefault"
                               name="Active" value="true" @(Model.Active == true ? "checked" : "") />
                    </div> *@

                    <div class="mb-3">
                        <button class="btn btn-primary" type="submit">Xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div id="message" style="display:none;"></div>


